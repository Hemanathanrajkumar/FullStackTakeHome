{
  "version": 2,
  "builds": [
    { "src": "front-end-app/angular.json", "use": "@vercel/static-build", "config": { "distDir": "../backend/src/public" } },
    { "src": "backend/**/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
